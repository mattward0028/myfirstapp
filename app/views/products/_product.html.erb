<div class="col-sm-6 col-md-4" id="product_info">
  <% cache product do %>
  <%= image_tag(product.image_url, class: "img-responsive") %>
  <h1><%= product.name %></h1>
  <p><%= product.description %></p>
  <p>$<%= product.price_in_cents %></p>
  <p><%= product.colour %></p>
  <p>
    <%= link_to 'Show', product_path(product) %>
    <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(product) %>  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </p>
  <% end %>
</div><!-- /col -->
