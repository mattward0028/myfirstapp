<p id="notice">
    <%= notice %>
</p>
<div class="container" id="product_show_content">
    <p>
        <strong>Name:</strong>
        <%= @product.name %>
    </p>
    <p>Average Rating:
        <div class="rated" data-score="<%= @product.average_rating %>"></div>
    </p>
    <p>
        <strong>Description:</strong>
        <%= @product.description %>
    </p>

    <p>
        <strong>Image url:</strong>
    </p>
    <p class="product_show_image">
        <%= image_tag(@product.image_url, class: "img-responsive") %>
    </p>

    <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
    </p>

    <p>
        <strong>Price:</strong> $
        <%= @product.price_in_cents %>
    </p>
    <p>
      <%= form_tag "/payments/create" do %>
      <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
</p>
    <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <% end %>
        <%= link_to 'Back', products_path %>

            <p>
                <!-- <%= @product.highest_rating_comment %> -->
                <%= render "products/new_comment" %>
                    <%= render "products/comments" %>
                        <% unless @comments.empty? %>
                                <div class="pagination">
                                    <div class="page_info">
                                        <%= page_entries_info @comments %>
                                    </div>
                                    <%= will_paginate @comments, :container => false %>
                                </div>
                            <% end %>

            </p>

</div>
